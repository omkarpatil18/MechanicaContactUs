<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="profile_name" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:padding">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_alignParentTop">true</item>

    </style>

    <style name="department_type" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="cardview" parent="CardView.Light">
        <item name="android:layout_width">160dp </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="circle_imageview">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="image_button">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>
